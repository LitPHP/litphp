{
  "name": "litphp/bolt",
  "description": "litphp micro-framework",
  "license": "ISC",
  "authors": [
    {
      "name": "McFog Wang",
      "email": "mcfogw@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Lit\\Bolt\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "require": {
    "litphp/voltage": "^1.0",
    "litphp/air": "^1.0"
  },
  "require-dev": {
    "litphp/router-fast-route": "^1.0",
    "litphp/runner-laminas-sapi": "^1.0",
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "test": "phpunit -c ."
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "suggest": {
    "litphp/router-fast-route": "suggested fast-route adapter and used by example"
  }
}
