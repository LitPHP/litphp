<phpunit bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="LitPHP TestSuite">
            <directory>./src/Lit/*/Tests/</directory>
            <directory>./src/Lit/Middleware/*/Tests/</directory>
            <directory>./src/Lit/Router/*/Tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
