{
  "name": "litphp/litphp",
  "description": "All LitPHP Goodies",
  "license": "ISC",
  "authors": [
    {
      "name": "McFog Wang",
      "email": "mcfogw@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "psr/container": "^1.0",
    "symfony/event-dispatcher": "^4.0",
    "nikic/fast-route": "^1.3",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0",
    "zendframework/zend-diactoros": "^1.8",
    "zendframework/zend-httphandlerrunner": "^1.0",
    "http-interop/http-factory-diactoros": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "phpstan/phpstan-shim": "^0.11.7",
    "squizlabs/php_codesniffer": "^3.4",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan-phpunit": "^0.11.2"
  },
  "replace": {
    "litphp/air": "self.version",
    "litphp/bolt": "self.version",
    "litphp/voltage": "self.version",
    "litphp/nexus": "self.version",
    "litphp/nimo": "self.version",
    "litphp/router-fast-route": "self.version",
    "litphp/runner-zend-sapi": "self.version"
  },
  "autoload": {
    "psr-4": {
      "Lit\\": "src/Lit/"
    },
    "exclude-from-classmap": [
      "**/Tests/"
    ]
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "extra": {
    "branch-alias": {
      "dev-master": "0.9.x-dev"
    }
  },
  "scripts": {
    "test": "phpunit -c .",
    "phpcs": "phpcs",
    "phpstan": "phpstan analyse"
  },
  "archive": {
    "exclude": [
      "/.*",
      "/docs",
      "/website"
    ]
  }
}
