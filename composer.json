{
    "name": "litphp/litphp",
    "description": "All LitPHP Goodies",
    "license": "ISC",
    "authors": [
        {
            "name": "McFog Wang",
            "email": "mcfogw@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "psr/container": "^1.0",
        "symfony/event-dispatcher": "^4.0",
        "nikic/fast-route": "^1.2",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "zendframework/zend-diactoros": "^1.8",
        "zendframework/zend-httphandlerrunner": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "replace": {
        "litphp/air": "self.version",
        "litphp/bolt": "self.version",
        "litphp/lit": "self.version",
        "litphp/middleware-ip-address": "self.version",
        "litphp/nexus": "self.version",
        "litphp/nimo": "self.version",
        "litphp/router-fast-route": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Lit\\": "src/Lit/"
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ],
        "files": [
            "src/Lit/Bolt/constants.php"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.9.x-dev"
        }
    }
}
